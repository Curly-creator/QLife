<Window x:Class="QLifeC_Datatool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLifeC_Datatool"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">

    <Grid>

        <!--Defining the grid structure with number of columns and rows-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!--All search & filter options can go in this stack panel-->
        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="4"/>
        <Button x:Name="btn_Filter" Content="Filter" Height="30"  Click="btn_Filter_Click" Margin="20,10,20,3"  Grid.Column="5" Grid.Row="3"/>


        <ComboBox Name="cmb_Sub1" Width="120" Height="20" Grid.Column="1" Grid.Row="1"></ComboBox>

        <!--All the main buttons are in this stack panel. Easier to make changes to multiple buttons at once-->
        <StackPanel Grid.Column="6" Grid.ColumnSpan="1" Grid.Row="4" Grid.RowSpan="8">
            <Button x:Name="btn_NewEntry" Content="Add" Height="30" Margin="20 10 20 10"/>
            <Button x:Name="btn_UpdEntry" Content="Edit" Height="30" Margin="20 5 20 10"/>
            <Button x:Name="btn_DelEntry" Content="Delete" Height="30" Margin="20 5 20 10"/>
            <Button x:Name="btn_Download" Content="Export" Height="30" Margin="20 40 20 10"/>
            <Button x:Name="btn_Import" Content="Import" Height="30" Margin="20 5 20 10"/>
        </StackPanel>

        <!--Main Grid-->
        <DataGrid x:Name="Dgd_MainGrid" AutoGenerateColumns="False" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="5" Grid.RowSpan="8" BorderThickness="1" BorderBrush="Gray" IsReadOnly="True">
            <DataGrid.Columns>

                <DataGridTextColumn Binding="{Binding Name}">
                    <DataGridTextColumn.Header>
                        <StackPanel Width="100">
                            <TextBlock Text="City" HorizontalAlignment="Center"/>
                            <TextBlock />
                            <TextBox Name="tbx_SearchBar" Background="Beige" TextAlignment="Left" TextChanged="tbx_SearchBar_TextChanged"  />
                        </StackPanel>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                    

                <DataGridTextColumn Binding="{Binding Categories[0]}">
                    <DataGridTextColumn.Header>
                        <StackPanel Width="100">
                            <TextBlock Text="Cost of Living" HorizontalAlignment="Center"/>
                            <Slider Name="sl_CoLFilter" Orientation="Horizontal" ValueChanged="sl_CoLFilter_ValueChanged"/>
                            <Label Name="lbl_CoL" Content="0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="ToolTip" Value="{Binding Categories[0].Tooltip}"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                

                <DataGridTextColumn Binding="{Binding Categories[1]}">
                    <DataGridTextColumn.Header>
                        <StackPanel Width="100">
                            <TextBlock Text="Healthcare" HorizontalAlignment="Center"></TextBlock>
                            <Slider Name="sl_HCFilter" Orientation="Horizontal" ValueChanged="sl_HCFilter_ValueChanged"/>
                            <Label Name="lbl_HC" Content="0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="ToolTip" Value="{Binding Categories[1].Tooltip}"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding Categories[2]}">
                    <DataGridTextColumn.Header>
                        <StackPanel Width="100">
                            <TextBlock Text="Internet Access" HorizontalAlignment="Center"></TextBlock>
                            <Slider Name="sl_IAFilter" Orientation="Horizontal" ValueChanged="sl_IAFilter_ValueChanged"/>
                            <Label Name="lbl_IA" Content="0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="ToolTip" Value="{Binding Categories[2].Tooltip}"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding Categories[3]}">
                    <DataGridTextColumn.Header>
                        <StackPanel Width="120">
                            <TextBlock Text="Environmental Quality" HorizontalAlignment="Center"></TextBlock>
                            <Slider Name="sl_EQFilter" Orientation="Horizontal" ValueChanged="sl_EQFilter_ValueChanged"/>
                            <Label Name="lbl_EQ" Content="0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="ToolTip" Value="{Binding Categories[3].Tooltip}"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding Categories[4]}">
                    <DataGridTextColumn.Header>
                        <StackPanel Width="100">
                            <TextBlock Text="Travel Connectivity" HorizontalAlignment="Center"></TextBlock>
                            <Slider Name="sl_TCFilter" Orientation="Horizontal" ValueChanged="sl_TCFilter_ValueChanged"/>
                            <Label Name="lbl_TC" Content="0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="ToolTip" Value="{Binding Categories[4].Tooltip}"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding Categories[5]}">
                    <DataGridTextColumn.Header>
                        <StackPanel Width="100">
                            <TextBlock Text="Outdoors" HorizontalAlignment="Center"></TextBlock>
                            <Slider Name="sl_OFilter" Orientation="Horizontal" ValueChanged="sl_OFilter_ValueChanged"/>
                            <Label Name="lbl_O" Content="0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="ToolTip" Value="{Binding Categories[5].Tooltip}"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
