<Window x:Class="QLifeC_Datatool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLifeC_Datatool"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">

    <Grid>

        <!--Defining the grid structure with number of columns and rows-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!--All search & filter options can go in this stack panel-->
        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2"/>

        <!--All the main buttons are in this stack panel. Easier to make changes to multiple buttons at once-->
        <StackPanel Grid.Column="6" Grid.ColumnSpan="1" Grid.Row="4" Grid.RowSpan="8">
            <Button x:Name="btn_NewEntry" Content="Add" Height="30" Margin="20 10 20 10"/>
            <Button x:Name="btn_UpdEntry" Content="Edit" Height="30" Margin="20 5 20 10"/>
            <Button x:Name="btn_DelEntry" Content="Delete" Height="30" Margin="20 5 20 10"/>
            <Button x:Name="btn_Download" Content="Export" Height="30" Margin="20 40 20 10"/>
            <Button x:Name="btn_Import" Content="Import" Height="30" Margin="20 5 20 10"/>
        </StackPanel>

        <!--Main Grid-->
        <DataGrid x:Name="Dgd_MainGrid" AutoGenerateColumns="False" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="5" Grid.RowSpan="8" BorderThickness="1" BorderBrush="Gray" IsReadOnly="True">

            <DataGrid.Columns>

                <DataGridTextColumn Header="City" Binding="{Binding Name}"/>

                <DataGridTextColumn Header="Cost of Living" Binding="{Binding Categories[0]}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="ToolTip" Value="{Binding Categories[0].Tooltip}"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Healthcare" Binding="{Binding Categories[1]}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="ToolTip" Value="{Binding Categories[1].Tooltip}"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Internet Access" Binding="{Binding Categories[2]}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="ToolTip" Value="{Binding Categories[2].Tooltip}"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Environmental Quality" Binding="{Binding Categories[3]}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="ToolTip" Value="{Binding Categories[3].Tooltip}"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Travel Connectivity" Binding="{Binding Categories[4]}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="ToolTip" Value="{Binding Categories[4].Tooltip}"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Outdoors" Binding="{Binding Categories[5]}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="ToolTip" Value="{Binding Categories[5].Tooltip}"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
        
        
        <Button x:Name="btn_Filter" Content="Filter" Grid.Column="4" HorizontalAlignment="Left" Margin="95,5,0,0" Grid.Row="3" VerticalAlignment="Top" Click="btn_Filter_Click"/>
        <Slider x:Name="sl_CoLFilter" Grid.Column="1" HorizontalAlignment="Left" Margin="45,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="20" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="1" Orientation="Vertical" Height="65" Grid.RowSpan="2" ValueChanged="sl_CoLFilter_ValueChanged"/>
        <Slider x:Name="sl_HCFilter" Grid.Column="1" HorizontalAlignment="Left" Margin="140,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="20" AutoToolTipPrecision="1" AutoToolTipPlacement="TopLeft" Orientation="Vertical" Height="65" Grid.RowSpan="2" ValueChanged="sl_HCFilter_ValueChanged"/>
        <Slider x:Name="sl_IAFilter" Width="20" Grid.Column="2" Margin="70,10,70,16" Grid.Row="2" AutoToolTipPrecision="1" AutoToolTipPlacement="TopLeft" Orientation="Vertical" Grid.RowSpan="2" Height="65" ValueChanged="sl_IAFilter_ValueChanged"/>
        <Slider x:Name="sl_EQFilter" Grid.Column="3" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Width="20" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="1" Orientation="Vertical" Height="65" Grid.RowSpan="2" ValueChanged="sl_EQFilter_ValueChanged"/>
        <Slider x:Name="sl_TCFilter" Grid.Column="3" HorizontalAlignment="Left" Margin="130,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="20" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="1" Orientation="Vertical" Height="65" Grid.RowSpan="2" ValueChanged="sl_TCFilter_ValueChanged"/>
        <Slider x:Name="sl_OFilter" Grid.Column="4" HorizontalAlignment="Left" Margin="46,18,0,0" Grid.Row="2" VerticalAlignment="Top" Width="20" AutoToolTipPrecision="1" AutoToolTipPlacement="TopLeft" Orientation="Vertical" Height="65" Grid.RowSpan="2" ValueChanged="sl_OFilter_ValueChanged"/>
        <Label Content="Search Bar" Grid.Column="1" Margin="0,0,0,20" Grid.Row="1" />
        <TextBox x:Name="tbx_SearchBar" Background="Beige" TextAlignment="Left" TextChanged="tbx_SearchBar_TextChanged" Grid.Column="1" Margin="0,26,0,3" Grid.Row="1"/>

        <Label x:Name="lbl_CoL" Content="0" Grid.Column="1" HorizontalAlignment="Left" Margin="70,16,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Label x:Name="lbl_HC" Content="0" Grid.Column="2" HorizontalAlignment="Left" Margin="0,16,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Label x:Name="lbl_IA" Content="0" Grid.Column="2" HorizontalAlignment="Left" Margin="80,16,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Label x:Name="lbl_EQ" Content="0" Grid.Column="3" HorizontalAlignment="Left" Margin="12,0,0,0" Grid.Row="2" VerticalAlignment="Center"/>
        <Label x:Name="lbl_O" Content="0" Grid.Column="4" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center"/>
        <Label x:Name="lbl_TC" Content="0" Grid.Column="4" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center"/>


    </Grid>
</Window>
